<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:scrollIndicators="none"
    android:layout_marginTop="130dp"
    tools:targetApi="m">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:orientation="vertical">

    <android.support.v7.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:paddingStart="30dp"
        android:paddingLeft="30dp">

        <LinearLayout
            android:id="@+id/card_1"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/card_background"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="29dp"
                android:src="@drawable/ic_textbooks"
                android:contentDescription="@string/textbooks"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_gravity="center"
                android:text="@string/textbooks"
                android:textColor="@color/primaryText"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_2"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/card_background"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="29dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_jigsaw"
                android:contentDescription="@string/solution"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="@string/solution"
                android:layout_gravity="center"
                android:textColor="@color/primaryText"/>

        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>

    <android.support.v7.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="30dp"
        android:paddingLeft="30dp">

        <LinearLayout
            android:id="@+id/card_3"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/card_background"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="29dp"
                android:src="@drawable/ic_notepad"
                android:contentDescription="@string/notes"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="@string/notes"
                android:layout_gravity="center"
                android:textColor="@color/primaryText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_4"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/card_background"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="29dp"
                android:src="@drawable/ic_board"
                android:contentDescription="@string/formula" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="@string/formula"
                android:layout_gravity="center"
                android:textColor="@color/primaryText" />

        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>


    <android.support.v7.widget.LinearLayoutCompat
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"
        android:layout_marginLeft="30dp">

        <LinearLayout
            android:id="@+id/card_5"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/card_background"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="29dp"
                android:src="@drawable/ic_plan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="PRACTICE\nPAPER"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/primaryText" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/card_6"
            android:orientation="vertical"
            android:layout_width="80dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:background="@drawable/card_background"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="29dp"
                android:src="@drawable/ic_contract" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:text="PREVIOUS\nPAPER"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="@color/primaryText"/>

        </LinearLayout>

    </android.support.v7.widget.LinearLayoutCompat>
    </LinearLayout>
</ScrollView>