<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.NotificationActivity">

    <android.support.v7.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>
    <TextView
            android:gravity="center"
            android:text="No Any Notification Yet \n Check Back Later"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/noNotification"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_below="@id/my_toolbar"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="8dp"/>
    <ImageView
            android:id="@+id/noNotificationImage"
            android:layout_below="@id/noNotification"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="123dp"/>
    <android.support.v7.widget.RecyclerView
            android:id="@+id/ConfigRecycler"
            android:layout_below="@id/my_toolbar"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
        android:layout_marginRight="8dp">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>