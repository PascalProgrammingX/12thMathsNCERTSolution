<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.learncbse.maths12">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".AppContext"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.main.PreviousPaperActivity"
            android:theme="@style/AppTheme.NoActionBar.Home">
        </activity>
        <activity android:name=".ui.main.PracticePaperActivity"
            android:theme="@style/AppTheme.NoActionBar.Home"/>
        <activity
            android:name=".ui.main.FormulaActivity"
            android:theme="@style/AppTheme.NoActionBar.Home" />
        <activity
            android:name=".ui.main.NotesActivity"
            android:theme="@style/AppTheme.NoActionBar.Home" />
        <activity
            android:name=".ui.view_doc.OthersPdfActivity"
            android:theme="@style/AppTheme.NoActionBar.Home"
            android:launchMode="singleTop"/>
        <activity android:name=".ui.main.TextBookActivity" />
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar.Home" />

        <service
            android:name=".MyService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/NoActionBarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.SolutionActivity"
            android:alwaysRetainTaskState="true"
            android:exported="true"
            android:label="Solution" />
        <activity
            android:name=".ui.exercicesdetail.ExercicesDetailActivity"
            android:alwaysRetainTaskState="true"
            android:exported="true"
            android:label=""
            android:theme="@style/AppTheme.NoActionBar.Home" />
        <activity
            android:name=".ui.view_doc.PdfViewActivity"
            android:alwaysRetainTaskState="true"
            android:exported="true"
            android:theme="@style/AppTheme.NoActionBar.Home" />
        <activity android:name=".ui.NotificationActivity" />
        <activity android:name=".ui.ShowNotification" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="c1c133bf43e73445bc4871bf1d14367354aa40e9" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/ad_mob_id" />
    </application>

</manifest>